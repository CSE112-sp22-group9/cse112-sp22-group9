//TODO: could use Husky to add pre-commit checks...
{
    "env": {
        //These provide predefined global variables, but not sure what they do
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "prettier"
    ],
    "overrides": [
        {
          "excludedFiles": "FirebaseInit.js"
        }
    ],
    "parserOptions": {
        //Specifies which version of ECMA we want to use (picked latest one)
        "ecmaVersion": 12
    },
    "plugins": [
        "prettier"
    ],
    "rules": {
        /*
         * add/disable more rules that we want below
         * here is a link to the rules
         * https://eslint.org/docs/rules/
         * --Notice that we extended "eslint:recommended"
         */
        "comma-dangle": [
            "error",
            "only-multiline"
        ],
        "prettier/prettier": [
            "error",
            {
                "endOfLine": "auto",
                "printWidth": 80,
                "semi": true,
                "singleQuote": true,
                "tabWidth": 4,
                "trailingComma": "es5"
            }
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}